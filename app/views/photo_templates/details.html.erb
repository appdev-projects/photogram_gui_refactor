<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p><%= @the_photo.caption %></p>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    2 months ago
  </dd>

  <dt>Edit photo</dt>
  <dd>
    edit form goes here
  </dd>

  <dt>Delete photo</dt>
  <dd>
    delete link goes here
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% the_comments = Comment.where({ :photo_id => @the_photo.id }) %>
  <% the_comments.each do |comment| %>
  <tr>
    <td>
      <% the_commenter = User.where({ :id => comment.author_id }).at(0) %>
      <%= the_commenter.username %>
    </td>

    <td>
      <%= comment.body %>
    </td>

    <td>
      <%= comment.created_at %>
    </td>
  </tr>
  
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment_record">
  <label for="photo_id_field">Photo ID</label>
  <input id="photo_id_field" type="text" value="<%= @the_photo.id %>" name="query_photo_id">

  <label for="author_id_field">Author ID</label>
  <input id="author_id_field" type="text" name="query_author_id">

  <label for="comment_field">Comment</label>
  <textarea id="comment_field" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
