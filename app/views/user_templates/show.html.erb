<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id %></dd>

  <dt>Edit user</dt>
  <dd>
    edit form goes here
  </dd>
</dl>

<% own_photos = Photo.where({ :owner_id => @the_user.id }) %>

<h2>Own photos (<%= own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th></th>
  </tr>

  <% own_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.image %>">
    </td>

    <td>
      <%= photo.poster.username %>
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= photo.created_at %>
    </td>
    
    <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
  </tr>

  <% end %>
</table>
